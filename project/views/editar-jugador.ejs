<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Editar Perfil | Torneo Pádel</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="/stylesheets/editar-jugador.css">
</head>
<body>
    <div class="edit-profile-container">
        <!-- Header -->
        <header class="edit-header">
            <div class="container">
                <a href="/perfil-jugador.ejs" class="back-link">
                    <i class="fas fa-arrow-left"></i>
                </a>
                <h1>Editar Perfil</h1>
            </div>
        </header>

        <!-- Formulario -->
        <main class="edit-form-container">
            <form id="profileForm">
                <!-- Sección Foto -->
                <div class="form-section photo-section">
                    <div class="photo-preview">
                        <img src="../images/jugador.jpg" alt="Foto de perfil" id="profilePhoto">
                        <label for="photoUpload" class="photo-upload-btn">
                            <i class="fas fa-camera"></i> Cambiar
                        </label>
                        <input type="file" id="photoUpload" accept="image/*" style="display: none;">
                    </div>
                </div>

                <!-- Sección Datos Personales -->
                <div class="form-section">
                    <h2><i class="fas fa-user-circle me-2"></i>Datos Personales</h2>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="firstName" class="form-label">Nombre</label>
                            <input type="text" class="form-control" id="firstName" value="Martín" required>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="lastName" class="form-label">Apellido</label>
                            <input type="text" class="form-control" id="lastName" value="López" required>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="birthDate" class="form-label">Fecha de Nacimiento</label>
                            <input type="date" class="form-control" id="birthDate" value="1990-03-15" required>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="dni" class="form-label">DNI</label>
                            <input type="text" class="form-control" id="dni" value="35.678.901" required>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label for="email" class="form-label">Correo Electrónico</label>
                        <input type="email" class="form-control" id="email" value="martin.lopez@email.com" required>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="phone" class="form-label">Teléfono</label>
                            <input type="tel" class="form-control" id="phone" value="+54 11 5678-9012">
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="address" class="form-label">Dirección</label>
                            <input type="text" class="form-control" id="address" value="Av. Corrientes 1234, CABA">
                        </div>
                    </div>
                </div>

                <!-- Sección Datos Deportivos -->
                <div class="form-section">
                    <h2><i class="fas fa-trophy me-2"></i>Datos Deportivos</h2>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="handicap" class="form-label">Handicap</label>
                            <select class="form-select" id="handicap">
                                <option value="1.0">1.0 - Principiante</option>
                                <option value="2.0">2.0</option>
                                <option value="3.0">3.0</option>
                                <option value="4.0" selected>4.0 - Intermedio</option>
                                <option value="5.0">5.0</option>
                                <option value="6.0">6.0 - Avanzado</option>
                            </select>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="position" class="form-label">Posición Preferida</label>
                            <select class="form-select" id="position">
                                <option value="derecha">Derecha</option>
                                <option value="reves" selected>Revés</option>
                                <option value="ambas">Ambas</option>
                            </select>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label for="club" class="form-label">Club/Pandilla</label>
                        <input type="text" class="form-control" id="club" value="Club Pádel Buenos Aires">
                    </div>
                </div>

                <!-- Sección Seguridad -->
                <div class="form-section">
                    <h2><i class="fas fa-lock me-2"></i>Seguridad</h2>
                    <div class="alert alert-warning">
                        <i class="fas fa-exclamation-circle me-2"></i> Solo completa si deseas cambiar tu contraseña
                    </div>

                    <div class="mb-3">
                        <label for="currentPassword" class="form-label">Contraseña Actual</label>
                        <div class="input-group">
                            <input type="password" class="form-control" id="currentPassword">
                            <button class="btn btn-outline-secondary toggle-password" type="button">
                                <i class="fas fa-eye"></i>
                            </button>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label for="newPassword" class="form-label">Nueva Contraseña</label>
                        <div class="input-group">
                            <input type="password" class="form-control" id="newPassword">
                            <button class="btn btn-outline-secondary toggle-password" type="button">
                                <i class="fas fa-eye"></i>
                            </button>
                        </div>
                        <div class="form-text">Mínimo 8 caracteres, incluyendo mayúsculas y números</div>
                    </div>

                    <div class="mb-3">
                        <label for="confirmPassword" class="form-label">Confirmar Nueva Contraseña</label>
                        <div class="input-group">
                            <input type="password" class="form-control" id="confirmPassword">
                            <button class="btn btn-outline-secondary toggle-password" type="button">
                                <i class="fas fa-eye"></i>
                            </button>
                        </div>
                    </div>
                </div>

                <!-- Botones de Acción -->
                <div class="form-actions">
                    <button type="button" class="btn btn-cancel" id="cancelBtn">
                        Cancelar
                    </button>
                    <button type="submit" class="btn btn-save">
                        <i class="fas fa-save me-2"></i>Guardar Cambios
                    </button>
                </div>
            </form>
        </main>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Custom JS -->
    <script src="/javascripts/editar-jugador.js"></script>
</body>
</html>