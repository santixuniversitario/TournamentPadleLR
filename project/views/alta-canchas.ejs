<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Carga de Canchas | Torneo Pádel</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="/stylesheets/alta-canchas.css">
</head>
<body>
    <!-- Header -->
    <header class="court-header">
        <div class="container">
            <nav class="navbar navbar-expand-lg navbar-dark">
                <div class="container-fluid">
                    <a class="navbar-brand" href="/admin-torneo">
                        <i class="fas fa-arrow-left me-2"></i> Volver
                    </a>
                    <h1 class="court-title">CARGA DE CANCHAS</h1>
                </div>
            </nav>
        </div>
    </header>

    <!-- Formulario -->
    <main class="court-form-container">
        <form id="courtForm">
            <!-- Sección Ubicación -->
            <div class="form-section">
                <h2><i class="fas fa-map-marker-alt me-2"></i> Ubicación</h2>
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label for="clubName" class="form-label">Nombre del Club</label>
                        <input type="text" class="form-control" id="clubName" required>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label for="address" class="form-label">Dirección</label>
                        <input type="text" class="form-control" id="address" required>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-4 mb-3">
                        <label for="city" class="form-label">Ciudad</label>
                        <input type="text" class="form-control" id="city" required>
                    </div>
                    <div class="col-md-4 mb-3">
                        <label for="province" class="form-label">Provincia</label>
                        <select class="form-select" id="province" required>
                            <option value="" selected disabled>Seleccionar...</option>
                            <option value="BA">Buenos Aires</option>
                            <option value="CBA">Córdoba</option>
                            <option value="SF">Santa Fe</option>
                            <!-- Agregar más provincias -->
                        </select>
                    </div>
                    <div class="col-md-4 mb-3">
                        <label for="zipCode" class="form-label">Código Postal</label>
                        <input type="text" class="form-control" id="zipCode">
                    </div>
                </div>
                <div class="mb-3">
                    <label for="locationNotes" class="form-label">Referencias adicionales</label>
                    <textarea class="form-control" id="locationNotes" rows="2"></textarea>
                </div>
            </div>

            <!-- Sección Características -->
            <div class="form-section">
                <h2><i class="fas fa-clipboard-list me-2"></i> Características</h2>
                <div class="row">
                    <div class="col-md-4 mb-3">
                        <label for="courtNumber" class="form-label">Número de Cancha</label>
                        <input type="number" class="form-control" id="courtNumber" min="1" required>
                    </div>
                    <div class="col-md-4 mb-3">
                        <label for="courtType" class="form-label">Tipo de Cancha</label>
                        <select class="form-select" id="courtType" required>
                            <option value="" selected disabled>Seleccionar...</option>
                            <option value="indoor">Indoor (Cubierta)</option>
                            <option value="outdoor">Outdoor (Descubierta)</option>
                            <option value="semi">Semi-cubierta</option>
                        </select>
                    </div>
                    <div class="col-md-4 mb-3">
                        <label for="surface" class="form-label">Superficie</label>
                        <select class="form-select" id="surface" required>
                            <option value="" selected disabled>Seleccionar...</option>
                            <option value="cemento">Cemento</option>
                            <option value="sintetica">Césped sintético</option>
                        </select>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label for="capacity" class="form-label">Capacidad de espectadores</label>
                        <input type="number" class="form-control" id="capacity" min="0">
                    </div>
                    <div class="col-md-6 mb-3">
                        <label for="lighting" class="form-label">Iluminación</label>
                        <select class="form-select" id="lighting">
                            <option value="buena">Buena</option>
                            <option value="regular" selected>Regular</option>
                            <option value="mala">Mala</option>
                            <option value="none">Sin iluminación</option>
                        </select>
                    </div>
                </div>
            </div>

            <!-- Sección Multimedia -->
            <div class="form-section">
                <h2><i class="fas fa-camera me-2"></i> Multimedia</h2>
                <div class="mb-3">
                    <label for="courtPhotos" class="form-label">Fotos de la cancha</label>
                    <input type="file" class="form-control" id="courtPhotos" multiple accept="image/*">
                    <div class="form-text">Máximo 5 fotos (JPG/PNG, 2MB c/u)</div>
                </div>
                <div class="mb-3">
                    <label for="layoutImage" class="form-label">Plano de ubicación (opcional)</label>
                    <input type="file" class="form-control" id="layoutImage" accept="image/*">
                </div>
                <div class="mb-3">
                    <label for="videoLink" class="form-label">Enlace a video (opcional)</label>
                    <input type="url" class="form-control" id="videoLink" placeholder="https://youtube.com/...">
                </div>
            </div>

            <!-- Botones -->
            <div class="form-actions">
                <button type="button" class="btn btn-secondary" id="cancelBtn">
                    Cancelar
                </button>
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-save me-2"></i> Guardar Cancha
                </button>
            </div>
        </form>
    </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/javascripts/alta-canchas.js"></script>
</body>
</html>