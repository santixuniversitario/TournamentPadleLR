<div class="card">
  <div class="card-header d-flex justify-content-between align-items-center">
    <h2>Listado de Torneos</h2>
    <a href="/torneos/crear" class="btn btn-success">Nuevo Torneo</a>
  </div>
  <div class="card-body">
    <% if (torneos.length > 0) { %>
      <div class="table-responsive">
        <table class="table table-striped">
          <thead>
            <tr>
              <th>Nombre</th>
              <th>Estado</th>
              <th>Jugadores</th>
              <th>Acciones</th>
            </tr>
          </thead>
          <tbody>
            <% torneos.forEach(torneo => { %>
              <tr>
                <td><%= torneo.nombre %></td>
                <td>
                  <span class="badge bg-<%= 
                    torneo.estado === 'creacion' ? 'secondary' : 
                    torneo.estado === 'grupos' ? 'warning' : 
                    torneo.estado === 'fase_final' ? 'info' : 'success' 
                  %>">
                    <%= torneo.estado.replace('_', ' ') %>
                  </span>
                </td>
                <td><%= torneo.jugadores.length %></td>
                <td>
                  <a href="/torneos/<%= torneo.id %>/administrar" class="btn btn-sm btn-primary">Administrar</a>
                </td>
              </tr>
            <% }); %>
          </tbody>
        </table>
      </div>
    <% } else { %>
      <div class="alert alert-info">No hay torneos creados a√∫n</div>
    <% } %>
  </div>
</div>